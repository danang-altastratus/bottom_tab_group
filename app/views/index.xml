			<ScrollableView id="scrollableViewContainer">			
				<Require type="view" src="firstTab" id="firstTabMenu" />
				<Require type="view" src="secondTab" id="secondTabMenu" />
				<Require type="view" src="thirdTab" id="thirdTabMenu" />
				<Require type="view" src="fourthTab" id="fourthTabMenu" />
